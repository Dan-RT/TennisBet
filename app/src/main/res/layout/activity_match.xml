<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context="com.udes.daniel.tennisbet.MainActivity"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:layout_marginTop="25dp">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/activity_match_name_player_1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="140dp"
                    android:text="player 1"/>
            <TextView
                    android:id="@+id/activity_match_score_player_1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:text="6"/>

        </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/activity_match_name_player_2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="140dp"
                android:text="player 2"/>

        <TextView
                android:id="@+id/activity_match_score_player_2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:text="4"/>

    </LinearLayout>



    <Button
            android:id="@+id/activity_match_bet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BET"
            android:gravity="center"
            android:layout_marginLeft="130dp"/>

    <TextView
        android:id="@+id/display_bet"
        android:layout_width="339dp"
        android:layout_height="36dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="" />

</LinearLayout>

